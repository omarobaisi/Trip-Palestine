<link rel="stylesheet" href="/Styles/navbar.css">

<nav id="navbar">

    <div class="nav-right">
        <a class="openNav"><i class="fa-solid fa-bars"></i></a>
        <a class="closeNav"><i class="fa-solid fa-bars"></i></a>
        <a class="nav-header" href="/">Trip Palestine</a>
    </div>

    <!-- Desktop Search -->
    <div class="nav-search">
        <form action="/search" method="GET" class="form-label">
            <input dir="rtl" type="text" placeholder="ابحث هنا" class="form-input" name="search">
            <button type="submit" class="form-botton">بحث</button>
        </form>
    </div>

    <!--! Mobile -->

    <!-- Mobile Search -->
    <div class="mobileNavHeader"><a href="/">Trip Palestine</a></div>
    <div class="mobileNavSearch">
        <a class="mobileSearchButton"><i class="fa-solid fa-magnifying-glass"></i></a>

        <form action="/search" method="GET" class="mobileSearchForm">
            <a class="hideMobileForm"><i class="fa-solid fa-x"></i></a>
            <input dir="rtl" type="text" placeholder="ابحث هنا" class="mobileNavInput" name="search">
        </form>
    </div>
    
    
    
    <div class="nav-left">
        <!-- User -->
        <div class="navUser">
            <a href="/admin/becoordinator" class="host">أصبح مضيفا</a>
            
            <div class="navUserDropdown">
                <% if(currentUser) { %>
                    <div class="dropdownElement"><a href="/user/<%= currentUser._id %>"><%= currentUser.name %></a></div>
                    <div class="dropdownElement"><a href="/user/logout">تسجيل الخروج</a></div>
                <% } else { %>
                    <div class="dropdownElement"><a href="/user/login">تسجيل الدخول</a></div>
                    <div class="dropdownElement"><a href="/user/register">انشاء حساب</a></div>
                <% } %>
            </div>
            <button class="navUserIcon"><i class="fa-solid fa-user"></i></button>
        </div>
    </div>
    
</nav>

<!--! SideNav -->
<nav class="sideNav">
    <div class="innerSideNav">
        <!-- Mobile -->
        <% if(currentUser) { %>
            <a href="/user/<%= currentUser._id %>" class="sideNavElement mobileSide"><%= currentUser.name %></a>
        <% } else { %>
            <a href="/user/login" class="sideNavElement mobileSide">تسجيل الدخول</a>
            <a href="/user/register" class="sideNavElement mobileSide">انشاء حساب</a>
        <% } %>

        <a href="/admin/becoordinator" class="sideNavElement mobileSide">أصبح مضيفا</a>
        <!-- Both -->
        <a class="sideNavElement">صفحة 1</a>
        <a class="sideNavElement">صفحة 2</a>
        <a class="sideNavElement">صفحة 3</a>
        <a class="sideNavElement">صفحة 4</a>
        <!-- Mobile -->
        <% if(currentUser) { %>
            <a href="/user/logout" class="sideNavElement mobileSide">تسجيل الخروج</a>
        <% } %>
    </div>
</nav>

<script type="text/javascript" src="/JS/navbar.js"></script>