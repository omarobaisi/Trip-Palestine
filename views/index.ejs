<% layout('/layouts/boilerplate') %> 
<link rel="stylesheet" type="text/css" href="/Index/index.css">

<div class="mainImageDiv">
    <img src="/Index/Dome-of-the-Rock-Jerusalem-Aerial-Photo-wide.jpg" alt="" class="mainImage">
    <div class="mainImageCenterDiv">
        <div class="mainImageText">ajsdlkjasdlk</div>
        <button class="mainImageButton">تصفح</button>
    </div>
</div>



<!-- Home page -->
<!-- Recieved an array of all the journeys -->

<div class="my-4" style="font-size: x-large; border-bottom: 1px solid black;">
    <span>Journeys</span>
    <a href="/journey" class="badge float-right">Show more</a>
</div>

<div class="row">
    <!-- Loop throw the journeys array -->
    <% for(journey of journeys) { %>
        <!-- for every journey do this -->
        <div class="col-4">
            <!-- show the first image of the journey -->
            <img src="<%= journey.images[0].url %>" alt="" class="img-fluid">
            <!-- Journey name -->
            <h5 class="mt-2"><%= journey.name %> </h5>
            <!-- Send a get request to "/journey/journey._id" to show the journey details -->
            <a class="btn btn-info mt-3" href="/journey/<%= journey._id %>">More</a>
        </div>
    <% } %>
</div>

<div class="mt-5">
    <!-- Only authorized people can make a new journey -->
    <% if(currentUser && currentUser.authorization != 'normal') { %> 
        <a class="btn btn-success" href="/journey/New">New Journey</a>
    <% } %> 
</div>